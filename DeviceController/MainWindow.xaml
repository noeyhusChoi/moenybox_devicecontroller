<Window
    x:Class="DeviceController.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Device Controller"
    Width="1180"
    Height="720"
    Background="#0A0F1E"
    FontFamily="Bahnschrift"
    mc:Ignorable="d">

    <Window.Resources>
        <Color x:Key="BgA">#0A0F1E</Color>
        <Color x:Key="BgB">#111827</Color>
        <Color x:Key="BgC">#0B1220</Color>
        <Color x:Key="Stroke">#1F2937</Color>
        <Color x:Key="TextPrimary">#E5E7EB</Color>
        <Color x:Key="TextMuted">#94A3B8</Color>
        <Color x:Key="Accent">#22D3EE</Color>
        <Color x:Key="AccentSoft">#164E63</Color>

        <SolidColorBrush x:Key="BrushBgA" Color="{StaticResource BgA}" />
        <SolidColorBrush x:Key="BrushBgB" Color="{StaticResource BgB}" />
        <SolidColorBrush x:Key="BrushBgC" Color="{StaticResource BgC}" />
        <SolidColorBrush x:Key="BrushStroke" Color="{StaticResource Stroke}" />
        <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource TextPrimary}" />
        <SolidColorBrush x:Key="BrushTextMuted" Color="{StaticResource TextMuted}" />
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource Accent}" />
        <SolidColorBrush x:Key="BrushAccentSoft" Color="{StaticResource AccentSoft}" />

        <LinearGradientBrush x:Key="WindowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0F1E" Offset="0" />
            <GradientStop Color="#0D1424" Offset="0.5" />
            <GradientStop Color="#0A1222" Offset="1" />
        </LinearGradientBrush>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{StaticResource BrushBgB}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushStroke}" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
            <Setter Property="Padding" Value="8,6" />
        </Style>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="{StaticResource BrushBgB}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushStroke}" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
            <Setter Property="Padding" Value="6,4" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource BrushAccent}" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,6" />
        </Style>

        <Style TargetType="{x:Type TabControl}">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="{StaticResource BrushBgB}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="{StaticResource BrushBgC}">
                                <TabPanel
                                    Margin="8,6,8,0"
                                    IsItemsHost="True"
                                    KeyboardNavigation.TabIndex="1" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Margin="8"
                                Background="{StaticResource BrushBgB}"
                                BorderBrush="{StaticResource BrushStroke}"
                                BorderThickness="1"
                                CornerRadius="10">
                                <ContentPresenter Margin="10" ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Foreground" Value="{StaticResource BrushTextMuted}" />
            <Setter Property="Background" Value="{StaticResource BrushBgC}" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border
                            x:Name="Bd"
                            Margin="0,0,8,0"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{StaticResource BrushStroke}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <ContentPresenter ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BrushBgB}" />
                                <Setter Property="Foreground" Value="{StaticResource BrushAccent}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource WindowGradient}">
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="{StaticResource BrushBgC}"
                BorderBrush="{StaticResource BrushStroke}"
                BorderThickness="1"
                CornerRadius="12">
                <DockPanel Margin="12">
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource BrushAccent}"
                            Text="Devices" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="12"
                            Foreground="{StaticResource BrushTextMuted}"
                            Text="상태 모니터링" />
                    </StackPanel>

                    <ListBox
                        Margin="0,6,0,0"
                        HorizontalContentAlignment="Stretch"
                        Background="{StaticResource BrushBgC}"
                        BorderThickness="0"
                        ItemsSource="{Binding Devices}"
                        SelectedItem="{Binding SelectedDevice}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="0,4,0,4" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="10,10"
                                    HorizontalAlignment="Stretch"
                                    Background="{StaticResource BrushBgB}"
                                    BorderBrush="{StaticResource BrushStroke}"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            FontSize="12"
                                            Foreground="{StaticResource BrushTextMuted}"
                                            Text="{Binding Health}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <Grid Grid.Column="1" Margin="14,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Background="{StaticResource BrushBgC}"
                    BorderBrush="{StaticResource BrushStroke}"
                    BorderThickness="1"
                    CornerRadius="12">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="260" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource BrushTextPrimary}"
                                Text="{Binding SelectedDevice.Name, FallbackValue='(장치 선택)'}" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="12"
                                Foreground="{StaticResource BrushTextMuted}"
                                Text="{Binding SelectedDevice.Health, FallbackValue='Offline'}" />
                        </StackPanel>

                        <ComboBox
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            DisplayMemberPath="Name"
                            ItemsSource="{Binding Commands}"
                            SelectedItem="{Binding SelectedCommand}" />

                        <TextBox
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            Text="{Binding Payload, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Grid.Column="3"
                            Margin="10,0,0,0"
                            Command="{Binding SendCommand}"
                            Content="Send" />
                    </Grid>
                </Border>

                <TabControl Grid.Row="1" Margin="0,12,0,0">
                    <TabItem Header="Response">
                        <TextBox
                            BorderThickness="0"
                            IsReadOnly="True"
                            Text="{Binding Response}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </TabItem>

                    <TabItem Header="Events">
                        <ListBox
                            Background="{StaticResource BrushBgB}"
                            BorderThickness="0"
                            Foreground="{StaticResource BrushTextPrimary}"
                            ItemsSource="{Binding AsyncEvents}" />
                    </TabItem>

                    <TabItem Header="Alerts">
                        <TextBlock Text="{Binding SelectedDevice.AlertsText}" TextWrapping="Wrap" />
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
