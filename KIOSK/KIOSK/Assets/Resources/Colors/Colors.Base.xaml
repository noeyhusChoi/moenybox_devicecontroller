<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Primary  -->
    <Color x:Key="Primary100">#FFE1E0</Color>
    <Color x:Key="Primary300">#FF9F99</Color>
    <Color x:Key="Primary400">#FF7B72</Color>
    <Color x:Key="Primary500">#FF482F</Color>
    <Color x:Key="Primary600">#D62C01</Color>
    <Color x:Key="Primary700">#A11E00</Color>

    <!--  Secondary (예시 일부)  -->
    <Color x:Key="Secondary200">#CBCBFC</Color>
    <Color x:Key="Secondary400">#9999FA</Color>
    <Color x:Key="Secondary700">#4848F4</Color>
    <Color x:Key="Secondary800">#2222F0</Color>
    <Color x:Key="Secondary900">#0B0B8F</Color>
    <Color x:Key="Secondary950">#04045C</Color>

    <!--  그레이 스케일 (일부)  -->
    <Color x:Key="Gray50">#F1F1F1</Color>
    <Color x:Key="Gray100">#DDDDDD</Color>
    <Color x:Key="Gray200">#BBBBBB</Color>
    <Color x:Key="Gray300">#A5A5A5</Color>
    <Color x:Key="Gray400">#7C7C7C</Color>
    <Color x:Key="Gray500">#5E5E5E</Color>
    <Color x:Key="Gray600">#444444</Color>
    <Color x:Key="Gray700">#2A2A2A</Color>
    <Color x:Key="Gray800">#101010</Color>
    <Color x:Key="Gray900">#070707</Color>
    <Color x:Key="Gray950">#040404</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!--  Point green  -->
    <Color x:Key="PointGreen50">#DEFEBE</Color>
    <Color x:Key="PointGreen100">#B9FC4F</Color>
    <Color x:Key="PointGreen200">#A3DE46</Color>
    <Color x:Key="PointGreen300">#8ABD3A</Color>
    <Color x:Key="PointGreen400">#74A02F</Color>
    <Color x:Key="PointGreen500">#608526</Color>

    <!--  Error  -->
    <Color x:Key="Error100">#FFE1E0</Color>
    <Color x:Key="Error300">#FF9F99</Color>
    <Color x:Key="Error400">#FF7B72</Color>
    <Color x:Key="Error500">#FF482F</Color>
    <Color x:Key="Error600">#D62C01</Color>
    <Color x:Key="Error700">#A11E00</Color>

    <!--  브러시 미리 노출  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary800}" />
    <SolidColorBrush x:Key="PointBrush" Color="{StaticResource PointGreen100}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />
</ResourceDictionary>