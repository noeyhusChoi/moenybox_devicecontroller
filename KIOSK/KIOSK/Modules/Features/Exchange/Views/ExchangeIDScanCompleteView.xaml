<UserControl
    x:Class="KIOSK.Views.ExchangeIDScanCompleteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ExchangeCompleteViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    d:Language="ko-KR"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  어떤 TextBlock에도 재사용  -->
        <Style x:Key="PulseTextStyle" TargetType="TextBlock">
            <Setter Property="Opacity" Value="1" />
            <Style.Triggers>
                <!--  보일 때부터 부드럽게 깜박임 시작  -->
                <Trigger Property="IsVisible" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard x:Name="PulseSb">
                            <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                                <!--  TargetName 없이: 이 스타일이 적용된 요소 자신을 타깃  -->
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Opacity"
                                    From="1.0"
                                    To="0.65"
                                    Duration="0:0:0.6">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="PulseSb" />
                    </Trigger.ExitActions>
                </Trigger>
                <!--  비활성일 때 살짝 약하게 (옵션)  -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.7" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#2222F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  상단 스테이터스  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="72,0,72,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="150"
                Height="70"
                Background="Transparent"
                BorderBrush="White"
                BorderThickness="1"
                Command="{Binding MainCommand}"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XS}"
                Foreground="White">
                <Button.Content>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="/Assets/Image/bx-home-smile.png" />
                        <TextBlock Margin="8,0,0,0" Text="HOME" />
                    </StackPanel>
                </Button.Content>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="1" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.SelectCurrency}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#FF482F"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="2" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.IDScan}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="3" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Deposit}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="#A5A5A5"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="4" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Withdraw}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  구분선  -->
        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <StackPanel Grid.Row="2 " VerticalAlignment="Center">
            <Image
                Width="180"
                Height="180"
                Source="/Assets/Image/succss.png" />
            <Separator Height="70" Background="Transparent" />
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_2XL}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="{StaticResource WhiteBrush}"
                Text="{lx:Loc ScanComplete.Title}" />
            <Separator Height="0" Background="Transparent" />
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_L}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="{StaticResource WhiteBrush}"
                Style="{StaticResource PulseTextStyle}"
                Text="{lx:Loc ScanComplete.SubTitle}" />
            <Separator Height="50" Background="Transparent" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Image
                    Width="40"
                    Height="40"
                    Source="/Assets/Image/Info.png" />
                <Separator Width="20" Background="Transparent" />
                <TextBlock
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_L}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="{StaticResource WhiteBrush}"
                    Opacity="0.7"
                    Text="{lx:Loc ScanComplete.Info}" />
            </StackPanel>
        </StackPanel>

        <Button
            Grid.Row="2"
            Width="430"
            Height="100"
            Margin="56"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding NextCommand}"
            Content="{lx:Loc Common.Next}"
            FontFamily="{StaticResource Pretendard}"
            FontSize="{StaticResource FontSize_S}"
            FontWeight="{StaticResource FontWeight_L}"
            IsEnabled="{Binding CanNext}">
            <Button.Style>
                <Style TargetType="Button">
                    <!--  기본(활성) 색  -->
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Style.Triggers>
                        <!--  비활성일 때 색 변경  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource Gray300Brush}" />
                            <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
                            <Setter Property="BorderBrush" Value="{StaticResource Gray300Brush}" />
                            <Setter Property="Opacity" Value="0.9" />
                            <!--  살짝 흐리게 (선택)  -->
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
