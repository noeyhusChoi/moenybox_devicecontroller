<UserControl
    x:Class="KIOSK.Modules.GTF.Views.GtfRefundSignatureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Modules.GTF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1820"
    d:DesignWidth="1080"
    Background="{StaticResource SecondaryBrush}"
    mc:Ignorable="d">
    <Grid Width="1000" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Margin="32"
            Background="WhiteSmoke"
            CornerRadius="16">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="5*" />
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <DrawingAttributes
                        x:Key="SignatureInkAttributes"
                        Width="3"
                        Height="3"
                        FitToCurve="False"
                        IgnorePressure="False"
                        StylusTip="Ellipse"
                        Color="Black" />
                </Grid.Resources>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_XL}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="Black"
                    TextAlignment="Center">
                    <Run Text="등록하신 환급전표 중에" />
                    <LineBreak />
                    <Run Text="숙박/의료용역 환급전표가 있습니다" />
                </TextBlock>
                <TextBlock
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_XL}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="Black"
                    TextAlignment="Center">
                    <Run Text="숙박/의료용역 환급을 위해" />
                    <LineBreak />
                    <Run Text="개인정보 제공 및 이용 동의가 필요합니다." />
                </TextBlock>
                <InkCanvas
                    x:Name="InkArea"
                    Grid.Row="2"
                    Margin="64"
                    Background="LightGray"
                    DefaultDrawingAttributes="{StaticResource SignatureInkAttributes}"
                    EditingMode="Ink" />

            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="200"
                Height="80"
                Command="{Binding MainCommand}"
                Content="취소" />
            <Button
                Grid.Column="1"
                Width="200"
                Height="80"
                Command="{Binding PreviousCommand}"
                Content="이전" />
            <Button
                Grid.Column="3"
                Width="200"
                Height="80"
                Command="{Binding NextCommand}"
                Content="다음" />
        </Grid>

    </Grid>
</UserControl>
