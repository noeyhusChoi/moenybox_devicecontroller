<UserControl
    x:Class="KIOSK.Presentation.Features.Environment.Views.DeviceStatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CleanDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F9FAFB" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CleanDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserSortColumns" Value="False" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="RowHeight" Value="28" />
            <Setter Property="ColumnHeaderHeight" Value="34" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="White" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="AlternationCount" Value="2" />
            <Setter Property="RowStyle" Value="{StaticResource CleanDataGridRowStyle}" />
        </Style>

        <Style x:Key="LeftHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Background" Value="#F2F2F2" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="6,0,6,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
        </Style>

        <Style x:Key="LeftCellTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="Padding" Value="6,0,6,0" />
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F9FAFB" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="0,8,0,0" />
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="1.2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="10,0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="ButtonGhost"
            BasedOn="{StaticResource RoundedButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#374151" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#6B7280" />
        </Style>

        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#111827" />
        </Style>
    </UserControl.Resources>

    <Border
        Width="1280"
        MaxHeight="960"
        VerticalAlignment="Center"
        Background="White"
        CornerRadius="20">
        <Grid Margin="24" Background="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border
                Grid.Row="0"
                Padding="0,0,0,12"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Bold"
                            Text="장치 상태 상세" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="#6B7280"
                            Text="{Binding SelectedDevice.Name}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,6,0"
                            Command="{Binding RefreshCommand}"
                            Content="새로고침"
                            Style="{StaticResource ButtonGhost}" />
                        <Button
                            Margin="0,0,6,0"
                            Command="{Binding DumpCacheCommand}"
                            Content="캐시 덤프"
                            Style="{StaticResource ButtonGhost}" />
                        <Button
                            Command="{Binding BackCommand}"
                            Content="뒤로"
                            Style="{StaticResource ButtonGhost}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="640" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="560" />
                </Grid.ColumnDefinitions>

                <!-- Left: Device List -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="장치 목록" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="11"
                                Foreground="#6B7280"
                                Text="{Binding Devices.Count, StringFormat=총 {0}대}" />
                        </Grid>

                        <ListBox
                            Grid.Row="1"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding Devices}"
                            SelectedItem="{Binding SelectedDevice}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="container" Background="Transparent">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="container" Property="Background" Value="#EEF2FF" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,6"
                                        Padding="10,6"
                                        Background="White"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                                <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#6B7280"
                                                        Text="{Binding Vendor}" />
                                                    <TextBlock
                                                        Margin="6,0,0,0"
                                                        FontSize="11"
                                                        Foreground="#6B7280"
                                                        Text="{Binding Model}" />
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Border
                                                    Margin="0,0,6,0"
                                                    Padding="8,2"
                                                    Background="#F3F4F6"
                                                    CornerRadius="10">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#6B7280"
                                                        Text="{Binding Health}" />
                                                </Border>
                                                <Border
                                                    Padding="8,2"
                                                    Background="#F3F4F6"
                                                    CornerRadius="10">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#6B7280"
                                                        Text="{Binding AlertCount, StringFormat=알림 {0}}" />
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Right: Details -->
                <StackPanel Grid.Column="2">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="장치 정보" />
                                <Border
                                    Grid.Column="1"
                                    Padding="8,2"
                                    Background="#EEF2FF"
                                    CornerRadius="10">
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="#4338CA"
                                        Text="{Binding SelectedDevice.Health}" />
                                </Border>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelTextStyle}" Text="이름" />
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.Name}" />
                                <TextBlock Grid.Column="2" Margin="12,0,0,0" Style="{StaticResource LabelTextStyle}" Text="벤더" />
                                <TextBlock Grid.Column="3" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.Vendor}" />
                            </Grid>
                            <Grid Grid.Row="2" Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelTextStyle}" Text="모델" />
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.Model}" />
                                <TextBlock Grid.Column="2" Margin="12,0,0,0" Style="{StaticResource LabelTextStyle}" Text="프로토콜" />
                                <TextBlock Grid.Column="3" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.ProtocolName}" />
                            </Grid>
                            <Grid Grid.Row="3" Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelTextStyle}" Text="통신" />
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.TransportType}" />
                                <TextBlock Grid.Column="2" Margin="12,0,0,0" Style="{StaticResource LabelTextStyle}" Text="포트" />
                                <TextBlock Grid.Column="3" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.TransportPort}" />
                            </Grid>
                            <Grid Grid.Row="4" Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Style="{StaticResource LabelTextStyle}" Text="파라미터" />
                                <TextBlock Grid.Column="1" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.TransportParam}" />
                                <TextBlock Grid.Column="2" Margin="12,0,0,0" Style="{StaticResource LabelTextStyle}" Text="폴링" />
                                <TextBlock Grid.Column="3" Style="{StaticResource ValueTextStyle}" Text="{Binding SelectedDevice.PollingMs, StringFormat={}{0} ms}" />
                            </Grid>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="240" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,8"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="알림" />

                            <Border
                                Grid.Row="1"
                                Background="White"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="8">
                                <Grid>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="#9CA3AF"
                                        Text="알림 없음">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedDevice.AlertCount}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding SelectedDevice.Alerts}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Margin="0,0,0,6"
                                                        Padding="8,6"
                                                        Background="#F9FAFB"
                                                        BorderBrush="#E5E7EB"
                                                        BorderThickness="1"
                                                        CornerRadius="8">
                                                        <StackPanel>
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontWeight="SemiBold"
                                                                Text="{Binding Code}" />
                                                            <TextBlock
                                                                Margin="0,2,0,0"
                                                                FontSize="11"
                                                                Foreground="#6B7280"
                                                                Text="{Binding Message}" />
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="240" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="명령 목록" />
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding SendSelectedCommandCommand}"
                                    Content="전송"
                                    Style="{StaticResource ButtonGhost}" />
                            </Grid>

                            <DataGrid
                                Grid.Row="1"
                                ItemsSource="{Binding Commands}"
                                SelectedItem="{Binding SelectedCommand}"
                                Style="{StaticResource CleanDataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="160"
                                        Binding="{Binding Name}"
                                        ElementStyle="{StaticResource LeftCellTextStyle}"
                                        Header="명령"
                                        HeaderStyle="{StaticResource LeftHeaderStyle}" />
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Description}"
                                        ElementStyle="{StaticResource LeftCellTextStyle}"
                                        Header="설명"
                                        HeaderStyle="{StaticResource LeftHeaderStyle}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
