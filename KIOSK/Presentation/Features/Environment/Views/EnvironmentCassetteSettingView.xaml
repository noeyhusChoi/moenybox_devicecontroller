<UserControl
    x:Class="KIOSK.Presentation.Features.Environment.Views.EnvironmentCassetteSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Features.Environment.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:KIOSK.Presentation.Features.Environment.ViewModels"
    x:Name="Root"
    d:DataContext="{d:DesignInstance vm:EnvironmentCassetteSettingViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupedCassettes" Source="{Binding WithdrawalCassette}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="DeviceId" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="삭제" />
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Red" />
            <Setter Property="Padding" Value="5,2" />
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="+ 슬롯 추가" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#0078D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>
    </UserControl.Resources>

    <Border
        Width="1280"
        MaxHeight="960"
        VerticalAlignment="Center"
        Background="White"
        CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="Green"
                    Text="{Binding StatusMessage}" />
                <Button
                    Margin="0,0,20,0"
                    Padding="15,5"
                    Background="#107C10"
                    Command="{Binding SaveAllCommand}"
                    Content="전체 저장"
                    Foreground="White" />
                <Button
                    Padding="15,5"
                    Background="{StaticResource PrimaryBrush}"
                    Command="{Binding CloseCommand}"
                    Content="나가기"
                    Foreground="White" />
            </StackPanel>

            <DataGrid
                Grid.Row="1"
                Margin="10"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                HeadersVisibility="Column"
                ItemsSource="{Binding Source={StaticResource GroupedCassettes}}"
                SelectionMode="Single">

                <DataGrid.GroupStyle>
                    <GroupStyle>

                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </GroupStyle.ContainerStyle>

                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Background="#EEF6FF" Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="12"
                                            Foreground="#666"
                                            Text="{Binding ItemCount, StringFormat=' (총 {0}개 슬롯)'}" />

                                        <Button
                                            Command="{Binding DataContext.AddSlotCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Name}"
                                            Style="{StaticResource AddButtonStyle}" />
                                    </StackPanel>

                                    <Grid Background="#F9F9F9">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="0.5*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="0.7*" />
                                            <ColumnDefinition Width="0.7*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="1"
                                            FontWeight="SemiBold"
                                            Foreground="#555"
                                            Text="Slot" />
                                        <TextBlock
                                            Grid.Column="2"
                                            FontWeight="SemiBold"
                                            Foreground="#555"
                                            Text="Currency" />
                                        <TextBlock
                                            Grid.Column="3"
                                            FontWeight="SemiBold"
                                            Foreground="#555"
                                            Text="Unit Value" />
                                        <TextBlock
                                            Grid.Column="4"
                                            FontWeight="SemiBold"
                                            Foreground="#555"
                                            Text="Count" />
                                        <TextBlock
                                            Grid.Column="5"
                                            HorizontalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Foreground="#555"
                                            Text="Action" />
                                    </Grid>

                                </StackPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </DataGrid.GroupStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding DeviceID}"
                        Header="Device ID"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="0.5*"
                        Binding="{Binding Slot}"
                        Header="Slot" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding CurrencyCode}"
                        Header="Currency" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Denomination, StringFormat={}{0:N0}}"
                        Header="Unit Value" />
                    <DataGridTextColumn
                        Width="0.7*"
                        Binding="{Binding Count}"
                        Header="Count" />
                    <DataGridTemplateColumn Width="0.7*" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Command="{Binding DataContext.DeleteSlotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource DeleteButtonStyle}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
