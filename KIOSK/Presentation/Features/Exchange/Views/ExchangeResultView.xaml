<UserControl
    x:Class="KIOSK.Views.ExchangeResultView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:KIOSK.Views"
    xmlns:lx="clr-namespace:Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:KIOSK.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ExchangeResultViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="980"
    d:DesignWidth="1920"
    d:Language="ko-KR"
    mc:Ignorable="d">

    <Grid Background="{StaticResource SecondaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="168" />
            <RowDefinition Height="36" />
            <RowDefinition Height="103" />
            <RowDefinition Height="22" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  상단 스테이터스  -->
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="72,0,72,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="{StaticResource Gray300Brush}"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="1" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.SelectCurrency}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="{StaticResource Gray300Brush}"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="2" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.IDScan}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="{StaticResource Gray300Brush}"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="3" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Deposit}" />
                </StackPanel>
                <StackPanel Margin="0,0,60,0" Orientation="Horizontal">
                    <Grid Margin="0,0,10,0">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Fill="{StaticResource PrimaryBrush}"
                            Stroke="White"
                            StrokeThickness="1" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="32"
                            Foreground="White"
                            Text="4" />
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{lx:Loc ExchangeSellProcess.Withdraw}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  구분선  -->
        <Rectangle
            Height="0.6"
            Margin="72,0,72,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Stroke="#DCDEE0" />

        <!--  타이틀  -->
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Pretendard}"
            FontSize="{StaticResource FontSize_XL}"
            FontWeight="{StaticResource FontWeight_S}"
            Foreground="White"
            Text="이용내역을 확인해 주세요." />

        <!--  내용  -->
        <Grid
            Grid.Row="4"
            Margin="80,0,80,0"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="54" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  좌측  -->
            <Border
                Grid.Column="0"
                Height="550"
                VerticalAlignment="Bottom"
                Background="White"
                CornerRadius="20">

                <StackPanel Margin="72,26" VerticalAlignment="Center">

                    <!--  텍스트  -->
                    <TextBlock
                        Margin="0,6"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_S}"
                        Text="판매할 통화" />
                    <!--  국기  -->
                    <StackPanel
                        Margin="0,6"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Ellipse
                            Width="64"
                            Height="64"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            SnapsToDevicePixels="True"
                            Stroke="#1A000000"
                            StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding SelectedCurrencyFlag}" Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <!--  체브론  -->
                        <Grid
                            Width="22"
                            Height="24"
                            Margin="35,0">
                            <!--  스토리보드  -->
                            <Grid.Resources>
                                <Storyboard x:Key="SweepStoryboard" RepeatBehavior="Forever">
                                    <!--  C1: -1 -> +1  -->
                                    <DoubleAnimation
                                        Storyboard.TargetName="C1"
                                        Storyboard.TargetProperty="(Shape.Stroke).(LinearGradientBrush.RelativeTransform).(TranslateTransform.X)"
                                        From="-1"
                                        To="1"
                                        Duration="0:0:1.0" />
                                    <!--  C2  -->
                                    <DoubleAnimation
                                        BeginTime="0:0:0.5"
                                        Storyboard.TargetName="C2"
                                        Storyboard.TargetProperty="(Shape.Stroke).(LinearGradientBrush.RelativeTransform).(TranslateTransform.X)"
                                        From="-1"
                                        To="1"
                                        Duration="0:0:1.0" />
                                </Storyboard>
                            </Grid.Resources>

                            <!--  체브론 Path  -->
                            <Path
                                x:Name="C1"
                                Data="M1,2 L10,12 L1,22"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="3">
                                <Path.Stroke>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,0">
                                        <!--  밝기 조절: 시작/끝은 연한 회색, 중앙은 진한 색  -->
                                        <GradientStop Offset="0.0" Color="#BBBBBB" />
                                        <GradientStop Offset="0.45" Color="#000000" />
                                        <GradientStop Offset="0.55" Color="#000000" />
                                        <GradientStop Offset="1.0" Color="#BBBBBB" />
                                        <!--  시작 위치를 -1로 두어 왼쪽 바깥에서 시작  -->
                                        <LinearGradientBrush.RelativeTransform>
                                            <TranslateTransform X="-1" />
                                        </LinearGradientBrush.RelativeTransform>
                                    </LinearGradientBrush>
                                </Path.Stroke>
                            </Path>
                            <Path
                                x:Name="C2"
                                Data="M11,2 L20,12 L11,22"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="3">
                                <Path.Stroke>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Offset="0.0" Color="#BBBBBB" />
                                        <GradientStop Offset="0.45" Color="#000000" />
                                        <GradientStop Offset="0.55" Color="#000000" />
                                        <GradientStop Offset="1.0" Color="#BBBBBB" />
                                        <LinearGradientBrush.RelativeTransform>
                                            <TranslateTransform X="-1" />
                                        </LinearGradientBrush.RelativeTransform>
                                    </LinearGradientBrush>
                                </Path.Stroke>
                            </Path>
                            <!--  Loaded 시 자동 시작  -->
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource SweepStoryboard}" />
                                </EventTrigger>
                            </Grid.Triggers>
                        </Grid>
                        <Ellipse
                            Width="64"
                            Height="64"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            SnapsToDevicePixels="True"
                            Stroke="#1A000000"
                            StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/Flag/KOR.png" Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </StackPanel>
                    <!--  구분선  -->
                    <Rectangle
                        Height="2"
                        Margin="0,12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Stroke="#DCDEE0"
                        StrokeDashArray="6,4" />
                    <!--  환율, 입금금액  -->
                    <DockPanel Margin="0,6" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_S}"
                            Text="환율" />
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_S}"
                                FontWeight="{StaticResource FontWeight_M}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="1 {0} = {1:N4} KRW">
                                        <Binding Path="Transaction.CurrencyPair.BaseCurrency" />
                                        <Binding Path="Transaction.CurrencyPair.Rate" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Margin="0,6" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_S}"
                            Text="입금 금액" />
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_M}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:N0} {1}">
                                    <Binding Path="Transaction.SourceDepositedTotal" />
                                    <Binding Path="SelectedCurrency" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DockPanel>
                    <DockPanel Margin="0,6" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_S}"
                            Text="환전 금액" />
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_M}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:N0} {1}">
                                    <Binding Path="Transaction.TargetComputedAmount" />
                                    <Binding Path="Transaction.TargetCurrency" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DockPanel>

                    <!--  구분선  -->
                    <Rectangle
                        Height="2"
                        Margin="0,12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Stroke="#DCDEE0"
                        StrokeDashArray="6,4" />
                    <DockPanel Margin="0,6" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_S}"
                            Text="지급받은금액" />
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_XL}"
                            FontWeight="{StaticResource FontWeight_L}"
                            Foreground="{StaticResource SecondaryBrush}"
                            Text="{Binding Transaction.TargetSucceededTotalAmount, StringFormat={}{0:N0} KRW}" />
                    </DockPanel>
                    <DockPanel Margin="0,6" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Left"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_S}"
                            Text="미지급 금액" />
                        <TextBlock
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_XL}"
                            FontWeight="{StaticResource FontWeight_L}"
                            Foreground="{StaticResource SecondaryBrush}"
                            Text="{Binding Transaction.TargetMinorRemainderAmount, StringFormat={}{0:N0} KRW}" />
                    </DockPanel>
                    <TextBlock
                        Margin="0,12"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_XS}"
                        FontWeight="{StaticResource FontWeight_S}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{} 5만원권 : {0}장, 1만원권 : {1}장, 5천원권 : {2}장, 1천원권 : {3}장">
                                <Binding Path="WithrawalAmount50000" />
                                <Binding Path="WithrawalAmount10000" />
                                <Binding Path="WithrawalAmount5000" />
                                <Binding Path="WithrawalAmount1000" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

            </Border>

            <!--  우측  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                <Border
                    Height="250"
                    BorderBrush="Transparent"
                    BorderThickness="2"
                    CornerRadius="20">
                    <Border.Background>
                        <SolidColorBrush Opacity="0.4" Color="#363636" />
                    </Border.Background>
                    <StackPanel Margin="0,-28,0,0" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="210"
                                Height="190"
                                VerticalAlignment="Top"
                                Source="/Assets/Image/Character.png" />
                            <Separator Width="50" Background="Transparent" />
                            <TextBlock
                                Width="290"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_M}"
                                FontWeight="{StaticResource FontWeight_M}"
                                Foreground="White"
                                Text="여행의 시작과 마무리!  머니박스가 함께합니다. "
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <Separator Height="14" Background="Transparent" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_M}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="White"
                            Text="24시간, 언제 어디서나, 외화를 사고 파는 모든것!"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
                <StackPanel
                    Margin="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="40"
                        Height="40"
                        Source="/Assets/Image/Info_normal.png" />
                    <Separator Width="10" Background="Transparent" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource WhiteBrush}"
                        Text="이용내역을 확인하시고 영수증 출력여부를 선택하세요. " />
                </StackPanel>
                <Grid Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Background="White"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Command="{Binding NextCommand}"
                        Content="영수증 출력"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource PrimaryBrush}">
                        <Button.CommandParameter>
                            <sys:Boolean>true</sys:Boolean>
                        </Button.CommandParameter>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button
                        Grid.Column="2"
                        Background="{StaticResource PrimaryBrush}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        Command="{Binding NextCommand}"
                        Content="영수증 미출력"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_L}"
                        Foreground="{StaticResource WhiteBrush}">
                        <Button.CommandParameter>
                            <sys:Boolean>false</sys:Boolean>
                        </Button.CommandParameter>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>