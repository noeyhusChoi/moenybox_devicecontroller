<!--  PopupWindow.xaml  -->
<Window
    x:Class="KIOSK.Views.Exchange.Popup.PopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:KIOSK.Views.Exchange.Popup"
    xmlns:vm="clr-namespace:KIOSK.ViewModels.Exchange.Popup"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowActivated="True"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStyle="None">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ExchangePopupIDScanInfoViewModel}">
            <view:ExchangePopupIDScanInfoView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ExchangePopupTermsViewModel}">
            <view:ExchangePopupTermsView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!--  전체 클릭 차단용으로 Grid도 투명 배경 지정  -->
        <Grid.Background>
            <SolidColorBrush Opacity="0" Color="Transparent" />
        </Grid.Background>

        <Border Background="White" CornerRadius="30">
            <ContentPresenter
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding}" />
        </Border>
    </Grid>
</Window>
