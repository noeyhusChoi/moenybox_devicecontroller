<UserControl
    x:Class="KIOSK.Presentation.Features.GTF.Views.GtfAlipayGuideView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Features.GTF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     d:DesignHeight="1820"
    d:DesignWidth="1080"
    Background="{StaticResource SecondaryBrush}"
    mc:Ignorable="d">
    <Grid Width="1000" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_2XL}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="White"
                Text="Alipay 환급등록 안내"
                TextAlignment="Center" />
            <Border
                Grid.Row="1"
                Margin="8"
                Padding="32"
                Background="WhiteSmoke"
                CornerRadius="10">
                <StackPanel VerticalAlignment="Center">
                    <Image
                        Width="300"
                        Height="100"
                        Source="/Assets/Flag/CAD.png" />
                    <Separator Height="24" Background="Transparent" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_M}"
                        TextAlignment="Center">
                        <Run Text="등록한 신용카드 계좌로 환급해 드립니다." />
                        <LineBreak />
                        <Run Text="(출국 시 세관 반출 확인 후 30일 이내 환급)" />
                    </TextBlock>
                    <Separator Height="12" Background="Transparent" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_S}"
                        FontWeight="{StaticResource FontWeight_M}"
                        Foreground="{StaticResource PrimaryBrush}"
                        TextAlignment="Center">
                        <Run Text="신용카드 환급등록은" />
                        <LineBreak />
                        <Run Text="Visa, Master, JCB, UnionPay 신용카드만 가능(해외발급카드)" />
                    </TextBlock>
                </StackPanel>

            </Border>
            <Border
                Grid.Row="2"
                Margin="8"
                Padding="32"
                Background="WhiteSmoke"
                CornerRadius="10">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Width="300"
                        Height="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="Purple"
                        BorderThickness="2"
                        CornerRadius="20">

                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/Image/GTF_LOGO2.bmp" Stretch="Fill" />
                        </Border.Background>

                    </Border>
                    <StackPanel Margin="30,0">
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_L}"
                            Foreground="{StaticResource PrimaryBrush}"
                            TextAlignment="Left">
                            <Run Text="주의 !" />
                            <LineBreak />
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_M}"
                            TextAlignment="Left">
                            <Run Text="출국 시에 세관에 구매한 물건과" />
                            <LineBreak />
                            <Run Text="환급 전표를 제시하고 반출 확인을 받으세요." />
                            <LineBreak />
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_S}"
                            FontWeight="{StaticResource FontWeight_M}"
                            TextAlignment="Left">
                            <Run Text="세관 반출 확인을 받은 환급전표를" />
                            <LineBreak />
                            <Run Text="환급데스크 또는 메일박스에 제출하고" />
                            <LineBreak />
                            <Run Text="출국하면 등록하신 신용카드 계좌로" />
                            <LineBreak />
                            <Run Text="환급 받을 수 있습니다." />
                        </TextBlock>

                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="200"
                Height="80"
                Command="{Binding MainCommand}"
                Content="취소" />
            <Button
                Grid.Column="1"
                Width="200"
                Height="80"
                Command="{Binding PreviousCommand}"
                Content="이전" />
            <Button
                Grid.Column="3"
                Width="200"
                Height="80"
                Command="{Binding NextCommand}"
                Content="다음" />
        </Grid>
    </Grid>
</UserControl>
