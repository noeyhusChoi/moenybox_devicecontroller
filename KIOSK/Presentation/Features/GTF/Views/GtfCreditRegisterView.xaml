<UserControl
    x:Class="KIOSK.Presentation.Features.GTF.Views.GtfCreditRegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Features.GTF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1820"
    d:DesignWidth="1080"
    Background="{StaticResource SecondaryBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12" />
            <Setter Property="Background" Value="#1F2937" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                            <!--  버튼 내용은 전부 여기로 들어감  -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Width="1000" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Margin="32"
            Background="WhiteSmoke"
            CornerRadius="16">

            <Grid Margin="64">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <DrawingAttributes
                        x:Key="SignatureInkAttributes"
                        Width="3"
                        Height="3"
                        FitToCurve="False"
                        IgnorePressure="False"
                        StylusTip="Ellipse"
                        Color="Black" />
                </Grid.Resources>
                <!--  타이틀  -->
                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_2XL}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="Black"
                    TextAlignment="Center">
                    <Run Text="신용카드 환급등록을 선택하였습니다." />
                </TextBlock>
                <!--  환급 급액  -->
                <Grid Grid.Row="1" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="36" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource Pretendard}"
                        FontSize="{StaticResource FontSize_XL}"
                        FontWeight="{StaticResource FontWeight_M}"
                        Foreground="Black"
                        TextAlignment="Center">
                        <Run Text="환급 금액" />
                    </TextBlock>
                    <Border
                        Grid.Column="2"
                        Padding="8"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="36" />
                                <ColumnDefinition Width="9*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="{StaticResource FontSize_L}"
                                FontWeight="{StaticResource FontWeight_L}"
                                Foreground="Black"
                                TextAlignment="Center">
                                <Run Text="\" />
                            </TextBlock>
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Pretendard}"
                                FontSize="{StaticResource FontSize_2XL}"
                                FontWeight="{StaticResource FontWeight_M}"
                                Foreground="{StaticResource SecondaryBrush}"
                                TextAlignment="Center">
                                <Run Text="2,000" />
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
                <!--  이미지  -->
                <Image
                    Grid.Row="2"
                    Width="200"
                    Height="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Flag/CAD.png" />
                <!--  설명  -->
                <TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_S}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="{StaticResource PrimaryBrush}"
                    TextAlignment="Center">
                    <Run Text="신용카드 번호를 입력해주세요" />
                </TextBlock>
                <!--  카드 번호 출력  -->
                <Grid Grid.Row="4" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Margin="6,0"
                        Padding="8"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XL}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource SecondaryBrush}"
                            TextAlignment="Center">
                            <Run Text="{Binding Card1}" />
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="1"
                        Margin="6,0"
                        Padding="8"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XL}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource SecondaryBrush}"
                            TextAlignment="Center">
                            <Run Text="{Binding Card2}" />
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="2"
                        Margin="6,0"
                        Padding="8"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XL}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource SecondaryBrush}"
                            TextAlignment="Center">
                            <Run Text="{Binding Card3}" />
                        </TextBlock>
                    </Border>
                    <Border
                        Grid.Column="3"
                        Margin="6,0"
                        Padding="8"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="8">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XL}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource SecondaryBrush}"
                            TextAlignment="Center">
                            <Run Text="{Binding Card4}" />
                        </TextBlock>
                    </Border>
                </Grid>
                <!--  카드 번호 입력  -->
                <Grid
                    Grid.Row="5"
                    Margin="20"
                    HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="1"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="1" />
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="2"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="2" />
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="3"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="3" />
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="4"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="4" />
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.Column="4"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="5"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="5" />
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="6"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="6" />
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="7"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="7" />
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="8"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="8" />
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="9"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="9" />
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="4"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="0"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="0" />
                    </Button>
                    <Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="5"
                        Margin="6"
                        Command="{Binding InputNumberCommand}"
                        CommandParameter="Back"
                        Style="{StaticResource RoundedButtonStyle}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="{StaticResource FontSize_L}"
                            Text="Delete" />
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="200"
                Height="80"
                Command="{Binding MainCommand}"
                Content="취소" />
            <Button
                Grid.Column="1"
                Width="200"
                Height="80"
                Command="{Binding PreviousCommand}"
                Content="이전" />
            <Button
                Grid.Column="3"
                Width="200"
                Height="80"
                Command="{Binding NextCommand}"
                Content="다음" />
        </Grid>

    </Grid>
</UserControl>
