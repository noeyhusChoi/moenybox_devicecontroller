<UserControl
    x:Class="KIOSK.Presentation.Features.GTF.Views.GtfRefundCompleteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Features.GTF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1820"
    d:DesignWidth="1080"
    Background="{StaticResource SecondaryBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12" />
            <Setter Property="Background" Value="#1F2937" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                            <!--  버튼 내용은 전부 여기로 들어감  -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Margin="32"
            Background="WhiteSmoke"
            CornerRadius="16">

            <Grid Margin="64">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="6*" />
                </Grid.RowDefinitions>

                <!--  타이틀  -->
                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource Pretendard}"
                    FontSize="{StaticResource FontSize_XL}"
                    FontWeight="{StaticResource FontWeight_M}"
                    Foreground="Black"
                    TextAlignment="Center">
                    <Run Text="송금정보가 등록 되었습니다." />
                    <LineBreak />
                    <Run Text="출국 시 세관에 반출 확인을 받지 않을 경우" />
                    <LineBreak />
                    <Run Foreground="{StaticResource PrimaryBrush}" Text="송금 처리가 되지 않습니다." />
                </TextBlock>
                <!--  설명  -->
                <Border
                    Grid.Row="1"
                    Padding="32"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="Yellow"
                    BorderThickness="8"
                    CornerRadius="32">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="/Assets/Image/Character.png" />
                        <TextBlock
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_M}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource PrimaryBrush}"
                            TextAlignment="Left">
                            <Run Text="주의!" />
                        </TextBlock>

                        <TextBlock
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_XS}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource PrimaryBrush}"
                            TextAlignment="Left">
                            <Run Text="출국항 세관에 구매한물건과 환급전표를 제시하고 반출확인을 받아야" />
                            <LineBreak />
                            <Run Text="송금 처리가 완료됩니다." />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="3"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XS}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource BlackBrush}"
                            TextAlignment="Left">
                            <Run Text="숙박/의료용역 환급전표는 세관의 반출 확인이 필요하지 않으므로, 출국 시" />
                            <LineBreak />
                            <Run Text="환급 데스크르르 방문하여 제출하거나 메일박스에 제출하여 주십시오." />
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Row="2" Margin="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="3"
                Width="200"
                Height="80"
                Command="{Binding MainCommand}"
                Content="초기화면" />
        </Grid>

    </Grid>
</UserControl>
