<UserControl
    x:Class="KIOSK.Presentation.Features.GTF.Views.GtfRefundMethodSelectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Features.GTF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1820"
    d:DesignWidth="1080"
    Background="{StaticResource SecondaryBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12" />
            <Setter Property="Background" Value="#1F2937" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                            <!--  버튼 내용은 전부 여기로 들어감  -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_XL}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="White"
                Text="환급 받을 수단을 선택하세요." />
            <Separator Height="32" Background="Transparent" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_M}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="White"
                Text="(당 기기를 통한 시내환급은 글로벌택스프리 환급전표만 환급 가능)" />
            <Border
                Height="900"
                Margin="32"
                Background="WhiteSmoke"
                CornerRadius="20">
                <StackPanel Margin="32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Command="{Binding NextCommand}"
                            CommandParameter="Credit"
                            Style="{StaticResource RoundedButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  왼쪽 이미지  -->
                                <Image
                                    Grid.Column="0"
                                    Width="64"
                                    Height="64"
                                    Source="/Assets/Flag/AED.png"
                                    Stretch="Uniform" />

                                <!--  오른쪽 텍스트 2줄  -->
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_2XS}"
                                    FontWeight="{StaticResource FontWeight_M}">
                                    <Run Text="신용카드" />
                                    <LineBreak />
                                    <Run Text="환급등록" />
                                </TextBlock>
                            </Grid>
                        </Button>
                        <TextBlock
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XS}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource BlackBrush}">
                            <Run Text="귀하의 신용카드 계좌로 환급 받을 수 있습니다." />
                            <LineBreak />
                            <Run Text="(Visa, Master, JCB, UnionPay 카드만 가능)" />
                        </TextBlock>
                    </Grid>
                    <Separator Height="10" Background="Transparent" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Command="{Binding NextCommand}"
                            CommandParameter="Alipay"
                            Style="{StaticResource RoundedButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  왼쪽 이미지  -->
                                <Image
                                    Grid.Column="0"
                                    Width="64"
                                    Height="64"
                                    Source="/Assets/Flag/AED.png"
                                    Stretch="Uniform" />

                                <!--  오른쪽 텍스트 2줄  -->
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_2XS}"
                                    FontWeight="{StaticResource FontWeight_M}">
                                    <Run Text="Alipay" />
                                    <LineBreak />
                                    <Run Text="환급등록" />
                                </TextBlock>
                            </Grid>
                        </Button>
                        <TextBlock
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XS}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource BlackBrush}">
                            <Run Text="귀하의 Alipay 계좌로 환급 받을 수 있습니다." />
                        </TextBlock>
                    </Grid>
                    <Separator Height="10" Background="Transparent" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Command="{Binding NextCommand}"
                            CommandParameter="WeChat"
                            Style="{StaticResource RoundedButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  왼쪽 이미지  -->
                                <Image
                                    Grid.Column="0"
                                    Width="64"
                                    Height="64"
                                    Source="/Assets/Flag/AED.png"
                                    Stretch="Uniform" />

                                <!--  오른쪽 텍스트 2줄  -->
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Pretendard}"
                                    FontSize="{StaticResource FontSize_2XS}"
                                    FontWeight="{StaticResource FontWeight_M}">
                                    <Run Text="WeChat" />
                                    <LineBreak />
                                    <Run Text="환급등록" />
                                </TextBlock>
                            </Grid>
                        </Button>
                        <TextBlock
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource Pretendard}"
                            FontSize="{StaticResource FontSize_2XS}"
                            FontWeight="{StaticResource FontWeight_M}"
                            Foreground="{StaticResource BlackBrush}">
                            <Run Text="귀하의 WeChat 계좌로 환급 받을 수 있습니다." />
                        </TextBlock>
                    </Grid>
                    <Separator Height="10" Background="Transparent" />
                </StackPanel>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2" Margin="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="200"
                Height="80"
                Command="{Binding MainCommand}"
                Content="취소" />
        </Grid>
    </Grid>
</UserControl>
