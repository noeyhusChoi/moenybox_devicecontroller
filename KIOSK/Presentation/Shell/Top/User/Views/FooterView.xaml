<UserControl
    x:Class="KIOSK.Presentation.Shell.Top.Main.Views.FooterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Shell.Top.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KIOSK.Presentation.Shell.Top.Main.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid d:DataContext="{d:DesignInstance Type=viewModels:FooterViewModel}" Background="#170C37">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  타이머  -->
        <TextBlock
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="{StaticResource Pretendard}"
            FontSize="{StaticResource FontSize_XL}"
            Foreground="{StaticResource WhiteBrush}"
            Text="{Binding Timer.RemainingSeconds}" />

        <!--  QR 이미지  -->
        <Border
            Grid.Column="0"
            Width="100"
            Height="100"
            Margin="50,-30,20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1">
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Source="{Binding LocationQr}"
                Stretch="Fill" />
        </Border>

        <!--  아이콘 + 지점명 영역  -->
        <StackPanel
            Grid.Column="1"
            Margin="0,-10,30,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Image
                Width="38"
                Height="44"
                Margin="0,0,10,0"
                Source="{Binding LocationIconUri}" />
            <TextBlock
                VerticalAlignment="Bottom"
                FontFamily="{StaticResource Pretendard}"
                FontSize="30"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding BranchName}" />
        </StackPanel>
        <StackPanel
            Grid.Column="2"
            Margin="0,-10,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_2XS}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="{StaticResource WhiteBrush}"
                Text="{Binding Date}"
                Typography.NumeralAlignment="Tabular" />
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource Pretendard}"
                FontSize="{StaticResource FontSize_L}"
                FontWeight="{StaticResource FontWeight_M}"
                Foreground="{StaticResource WhiteBrush}"
                Text="{Binding Time}"
                Typography.NumeralAlignment="Tabular" />
        </StackPanel>
    </Grid>
</UserControl>
