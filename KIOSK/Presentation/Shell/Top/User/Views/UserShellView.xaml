<UserControl
    x:Class="KIOSK.Presentation.Shell.Top.Main.Views.UserShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Presentation.Shell.Top.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KIOSK.Presentation.Shell.Top.Main.ViewModels"
    xmlns:views="clr-namespace:KIOSK.Presentation.Shell.Top.Main.Views"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid>
        <Grid.InputBindings>
            <MouseBinding Command="{Binding RootInputCommand}" Gesture="LeftClick" />
        </Grid.InputBindings>

        <!--  Content 중앙 콘텐츠 영역  -->
        <ContentControl
            x:Name="MainContent"
            Margin="0,0,0,100"
            Background="#2222F0"
            Content="{Binding CurrentSubShell}" />

        <!--  Footer (QR + 정보), Frame 위로 표시  -->
        <ContentControl
            x:Name="FooterContent"
            Height="100"
            VerticalAlignment="Bottom"
            Panel.ZIndex="10"
            d:DataContext="{d:DesignInstance Type=viewModels:FooterViewModel}"
            Content="{Binding FooterViewModel}" />

        <!--  Popup  -->
        <!--<ContentControl Panel.ZIndex="1000" Content="{Binding PopupViewModel}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="IsHitTestVisible" Value="False" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPopupOpen}" Value="True">
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="IsHitTestVisible" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>

        </ContentControl>-->
    </Grid>
</UserControl>
