<UserControl
    x:Class="KIOSK.Shell.Sub.Exchange.View.ExchangeShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KIOSK.Shell.Sub.Exchange.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <!--  Default Layer  -->
        <ContentControl Content="{Binding CurrentView}" />

        <!--  Dim Background + Popup Layer  -->
        <Grid Panel.ZIndex="10">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Setter Property="IsHitTestVisible" Value="True" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding PopupContent}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Setter Property="IsHitTestVisible" Value="False" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Border Background="#80000000" />
            <ContentPresenter Content="{Binding PopupContent}" />
        </Grid>
    </Grid>
</UserControl>
